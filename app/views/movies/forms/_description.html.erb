<div id="<%= dom_id(movie) %>_description_form">
  <%= form_with(model: movie, local: false) do |form| %>
    <div class="field">
      <%= form.label :description, for: "#{dom_id(movie)}_description" %>
      <%= form.text_area :description, id: "#{dom_id(movie)}_description" %>
    </div>

    <%= form.submit %>
  <% end %>
</div>
