<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Duration</th>
      <th>Year</th>
      <th>Director</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <%= render 'form', movie: @movie %>


  <tbody id="movies">
    <% @movies.each do |movie| %>
      <%= render 'table_row', movie: movie %>  
    <% end %>
  </tbody>
</table>

