<%= form_with(model: movie, local: false) do |form| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
        <% movie.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <tbody>
      <tr id="<%= dom_id(movie) %>">
        <td>  
          <div class="field">
            <%= form.label :title %>
            <%= form.text_field :title %>
          </div>
        </td>
        <td>  
          <div class="field">
            <%= form.label :year %>
            <%= form.number_field :year %>
          </div>
        </td>
        <td> 
          <div class="field">
            <%= form.label :director_id %>
            <%= form.collection_select :director_id, @directors.order(:name), :id, :name %>
          </div> 
        </td>
        <td> 
          <div class="field">
            <%= form.label :description %>
            <%= form.text_area :description %>
          </div>
        </td>
        <td>   
          <div class="field">
            <%= form.label :duration %>
            <%= form.number_field :duration %>
          </div> 
        </td>
        <td>  
          <div class="actions">
             <%= form.submit %>
          </div>
          </td>
      </tr>
  </tbody>
<% end %>
